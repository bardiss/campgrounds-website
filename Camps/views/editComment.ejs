
<% include partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit my comment </h1>
        <div style="width: 30%; margin: 25px auto;">
            <!-- to still have the id <NESTED ROUTES>-->
                   
            <form action="/camps/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Edit</button>
                </div>
            </form>
            <a href="/camps">Go Back</a>
        </div>
    </div>
</div>
<% include partials/footer %>