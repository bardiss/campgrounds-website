
<% include partials/header %>

<div class="container">
        <div class="row">
            <h1 style="text-align: center">Edit <%= camp.name %></h1>
            <div style="width: 30%; margin: 25px auto;">
                
                <form action="/camps/<%= camp.id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name=Edited_camp[name] value="<%= camp.name %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name=Edited_camp[image] value="<%= camp.image %>">
                    </div>

                    <div class="form-group">
                        <input class="form-control" type="text" name=Edited_camp[description] value="<%= camp.description %>">
                    </div>
                    
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Edit</button>
                    </div>

                   
                </form>
                <a href="/camps">Go Back</a>
            </div>
        </div>
    </div>

<% include partials/footer %>